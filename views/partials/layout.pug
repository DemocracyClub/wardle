doctype html
html(lang='en-US')
    head
        meta(charset='UTF-8')
        meta(http-equiv='content-type', content='text/html; charset=utf-8')

        title= title

        meta(name='description', content='A Wordle Clone')
        meta(name='viewport', content='width=device-width, initial-scale=1')

        link(rel='stylesheet', href='/main.css')
    
    body
        header
            h1 Wordle

        main#main-content
            if error
                aside.alert.alert-error
                    p= error
            if info
                aside.alert.alert-info
                    p= info
            
            block content

        footer
            p
                | &copy; Jordan Kasper 2021 
                a(href='https://github.com/jakerella/wordle' target='_blank' title='View the Wordle Clone code on GitHub')
                    | GitHub
